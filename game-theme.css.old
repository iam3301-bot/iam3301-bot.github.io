/* ==========================================
   æ¸¸æˆä¸»é¢˜ CSS å˜é‡å®šä¹‰
   ========================================== */

body.theme-game {
  /* ä¸»è‰²è°ƒ - æ¸¸æˆé‡‘å¸é»„ */
  --game-gold: #FFD700;
  --game-gold-light: #FFE55C;
  --game-gold-dark: #DAA520;
  
  /* è¾…åŠ©è‰² - ç”Ÿå‘½çº¢ */
  --game-red: #FF4757;
  --game-red-light: #FF6B7A;
  --game-red-dark: #EE2F45;
  
  /* è¾…åŠ©è‰² - é­”åŠ›è“ */
  --game-blue: #2F80ED;
  --game-blue-light: #5FA8FF;
  --game-blue-dark: #1E5FCC;
  
  /* è¾…åŠ©è‰² - ç»éªŒç»¿ */
  --game-green: #2ECC71;
  --game-green-light: #54D98C;
  --game-green-dark: #27AE60;
  
  /* èƒŒæ™¯è‰² */
  --game-bg-primary: #1A1A2E;
  --game-bg-secondary: #16213E;
  --game-bg-card: #0F3460;
  --game-bg-overlay: rgba(15, 52, 96, 0.95);
  
  /* æ–‡å­—é¢œè‰² */
  --game-text-primary: #FFFFFF;
  --game-text-secondary: #E4E4E4;
  --game-text-muted: #94A3B8;
  
  /* è¾¹æ¡†å’Œåˆ†éš”çº¿ */
  --game-border: #533483;
  --game-border-light: rgba(83, 52, 131, 0.3);
  
  /* åº”ç”¨åŸºç¡€æ ·å¼ */
  background: linear-gradient(135deg, #1A1A2E 0%, #16213E 50%, #0F3460 100%);
  background-attachment: fixed;
}

/* ==========================================
   æ¸¸æˆä¸»é¢˜æ»šåŠ¨æ¡æ ·å¼
   ========================================== */

body.theme-game * {
  scrollbar-width: thin;
  scrollbar-color: var(--game-gold) rgba(15, 52, 96, 0.5);
}

body.theme-game ::-webkit-scrollbar {
  width: 12px;
  height: 12px;
}

body.theme-game ::-webkit-scrollbar-track {
  background: var(--game-bg-secondary);
  border-radius: 6px;
  box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.5);
}

body.theme-game ::-webkit-scrollbar-thumb {
  background: linear-gradient(
    180deg,
    var(--game-gold-light) 0%,
    var(--game-gold) 50%,
    var(--game-gold-dark) 100%
  );
  border-radius: 6px;
  border: 2px solid var(--game-bg-secondary);
  box-shadow: 
    0 0 10px rgba(255, 215, 0, 0.5),
    inset 0 0 5px rgba(255, 255, 255, 0.3);
}

body.theme-game ::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(
    180deg,
    #FFE55C 0%,
    var(--game-gold-light) 50%,
    var(--game-gold) 100%
  );
  box-shadow: 
    0 0 15px rgba(255, 215, 0, 0.8),
    inset 0 0 8px rgba(255, 255, 255, 0.5);
}

body.theme-game ::-webkit-scrollbar-corner {
  background: var(--game-bg-secondary);
}

/* ==========================================
   æ¸¸æˆä¸»é¢˜å¡ç‰‡æ ·å¼
   ========================================== */

body.theme-game .card {
  background: var(--game-bg-card);
  border: 3px solid var(--game-border);
  border-radius: 12px;
  box-shadow: 
    0 4px 20px rgba(83, 52, 131, 0.4),
    inset 0 0 30px rgba(255, 215, 0, 0.05);
  position: relative;
  overflow: hidden;
}

body.theme-game .card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, 
    var(--game-gold) 0%, 
    var(--game-red) 25%, 
    var(--game-blue) 50%, 
    var(--game-green) 75%, 
    var(--game-gold) 100%
  );
  animation: game-rainbow-flow 4s linear infinite;
}

@keyframes game-rainbow-flow {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

body.theme-game .card::after {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(
    circle at center,
    rgba(255, 215, 0, 0.1) 0%,
    transparent 70%
  );
  opacity: 0;
  transition: opacity 0.5s ease;
  pointer-events: none;
}

body.theme-game .card:hover::after {
  opacity: 1;
}

/* ==========================================
   æ¸¸æˆä¸»é¢˜æ ‡é¢˜æ ·å¼
   ========================================== */

body.theme-game .card-title,
body.theme-game .page-title {
  font-family: 'Orbitron', 'Microsoft YaHei', sans-serif;
  color: var(--game-gold);
  text-shadow: 
    0 0 10px rgba(255, 215, 0, 0.5),
    2px 2px 4px rgba(0, 0, 0, 0.8);
  letter-spacing: 2px;
  position: relative;
}

body.theme-game .card-title .dot {
  background: var(--game-gold);
  box-shadow: 0 0 10px var(--game-gold);
  animation: game-pulse 1.5s ease-in-out infinite;
}

@keyframes game-pulse {
  0%, 100% { 
    transform: scale(1);
    opacity: 1;
  }
  50% { 
    transform: scale(1.3);
    opacity: 0.7;
  }
}

/* ==========================================
   æ¸¸æˆä¸»é¢˜æŒ‰é’®æ ·å¼
   ========================================== */

body.theme-game button,
body.theme-game .ranking-tab {
  background: linear-gradient(135deg, var(--game-bg-card) 0%, var(--game-bg-secondary) 100%);
  border: 2px solid var(--game-border);
  color: var(--game-text-secondary);
  font-family: 'Rajdhani', 'Microsoft YaHei', sans-serif;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 1px;
  transition: all 0.3s ease;
  box-shadow: 0 4px 10px rgba(83, 52, 131, 0.3);
}

body.theme-game button:hover,
body.theme-game .ranking-tab:hover {
  background: linear-gradient(135deg, var(--game-blue-dark) 0%, var(--game-blue) 100%);
  border-color: var(--game-blue-light);
  color: var(--game-text-primary);
  transform: translateY(-2px);
  box-shadow: 
    0 6px 20px rgba(47, 128, 237, 0.4),
    0 0 20px rgba(47, 128, 237, 0.3);
}

body.theme-game .ranking-tab.is-active {
  background: linear-gradient(135deg, var(--game-gold-dark) 0%, var(--game-gold) 100%);
  border-color: var(--game-gold-light);
  color: #000;
  font-weight: 700;
  box-shadow: 
    0 4px 15px rgba(255, 215, 0, 0.5),
    inset 0 0 15px rgba(255, 255, 255, 0.3);
}

/* ==========================================
   æ¸¸æˆä¸»é¢˜æ’è¡Œæ¦œæ ·å¼
   ========================================== */

body.theme-game .ranking-item {
  background: rgba(15, 52, 96, 0.6);
  border: 2px solid var(--game-border-light);
  border-radius: 8px;
  transition: all 0.3s ease;
}

body.theme-game .ranking-item:hover {
  background: rgba(47, 128, 237, 0.2);
  border-color: var(--game-blue);
  transform: translateX(5px);
  box-shadow: 
    -5px 0 0 var(--game-blue),
    0 4px 15px rgba(47, 128, 237, 0.3);
}

body.theme-game .ranking-rank {
